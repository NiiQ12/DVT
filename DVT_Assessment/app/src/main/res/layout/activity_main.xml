        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:paddingLeft="11dp"
        android:paddingTop="350dp"
        android:text="min"
        android:textColor="#ffffff"
